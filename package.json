{
  "name": "eeg_analysis_tool",
  "version": "1.0.0",
  "description": "This is a eeg analysis tool for EEG data",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-mac": "electron-builder --mac --x64",
    "build-win": "electron-builder --win --x64"
  },
  "keywords": [],
  "author": "yuta_hayashi",
  "license": "UNLICENSED",
  "devDependencies": {
    "electron": "^16.0.5",
    "electron-builder": "^22.14.5"
  },
  "dependencies": {
    "request": "^2.88.2",
    "request-promise": "^4.2.6"
  },
  "build": {
    "appId": "com.yutahayashi.app",
    "asar": false,
    "files": [
      "npy/**/*",
      "out/**/*",
      "templates/**/*",
      "app.py",
      "calc_zscore.py",
      "main.js",
      "package-lock.json",
      "package.json",
      "topograph.py"
    ],
    "mac": {
      "icon": "icon.png",
      "target": "dmg"
    },
    "win": {
      "icon": "icon.png",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}